{
"manifest_version": 2,
    "name": "Racist, Not Xenophobic",
    "description": "A Chrome extension which replaces the euphemistic word \"xenophobic\" with the more accurate \"racist\".",
    "version": "1.0",
    "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}